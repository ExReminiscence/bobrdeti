footer{
    min-height: 135px;
    height: auto;
    width: 100%;
    z-index: 1;
    background: #212121;
}
.footer__gallery{
    width: 100px;
    margin-left: 200px;
}
.footer__gallery a{
    color: #FFFDFD;
}
.footer__contact a,.footer__rules a,.footer__map a,.footer__rightInfo a{
    font-size:14px;
    color: #FFFDFD;
    font-family: 'Montserrat', sans-serif;
}
.footer__contact a:hover,.footer__rules a:hover,.footer__map a:hover,.footer__rightInfo a:hover,.footer__gallery a:hover{
    color: #FEBF14;
    transition: 200ms ease all;
    margin-bottom: 10px;
}
.top-footer a:hover{
    text-decoration: none;
}
.top-footer{
    min-height: 100px;
    height: auto;
    padding: 45px 0 35px 0;
}
.bottom-footer{
    min-height: 35px;
    height: auto;
    background: #0F0F0F;
}

.footer-right-name{
    font-size:20px;
    padding: 2px 0 5px 0;
    color:white;
    margin 0
}
.footer-right-img{
    width:100%;
    height: 100%;
}
.footer-inp{
    height: 100%;
    width:100%;
    border:none;
    border-radius: 0;
    -webkit-border-radius: 0;
}

.footer-inp[placeholder]{
    font-size:12px;
    padding: 0 0 0 10px;
    font-style: italic;
}
.footer-podpiskaObnovDiv{
    margin:0;
    padding:0;
}
.footer-podpiskaObnov{
    font-size:14px;
    font-weight: bold;
    color:black;
    background: #FEBF14;
    padding: 10px;
    height: 100%;
    display:block;
    text-align:center;
}
.footer-podpiskaObnov:hover{
    color: #FEFEFE;
}

.bottom-footer-desc{
    color:#5F5F5F;
    padding:15px 0 15px 0;
    font-size: 10px;
    margin:0;
}

.social{
  display: flex;
  justify-content: space-between;
  margin-top: 30px;
  padding: 0 60px;
}

.footer__rightInfo__title>h3
  color #FFFDFD
  font-size 18px
  font-weight 600
  margin-bottom 5px
  margin-top: 0;

.footer__rightInfo__title__line
  border-top 3px solid #FEBF14
  margin-bottom 20px
  margin-left: 15px;
  width 200px

.footer__right
  display: flex;
  flex-direction: column;
  justify-content: center;

.top-footer__container
  padding:0;
  display: flex;
  align-items: center;

.top-footer__container__item
  display: flex;
  flex-direction: column;

@media only screen and (max-width: 768px) and (min-width: 320px)
  .top-footer__container
    flex-direction column
    margin-bottom: 50px;
    align-items: center;

  .top-footer__container__item
    align-items: center;

  .top-footer__container__item:last-child
    margin-top 30px

  .footer__rightInfo__title
    padding 0
    justify-content: center;
    display: flex;

  .footer__rightInfo__title>h3
    padding 0

  .footer__rightInfo__title__line
    margin-left 0
    width 90%

  .footer__rightInfo
    justify-content: center;
    display: flex;
