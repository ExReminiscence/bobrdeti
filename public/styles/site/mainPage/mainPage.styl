    */
}
.articleName__row{
  padding-left: 0;
}
.mainPage-content-right-RghtMenu,.mainPage-content-right-RghtMenu-Second{
    list-style: none;
}
.mainPage-content-right-RghtMenu {
    margin: 90px 0 151px 0 ;
    padding: 0 0 0 10px;
}
.mainPage-content-right-RghtMenu li{
    cursor: pointer;
    padding: 30px 0 0 0 ;
}

.mainPage-content-right-RghtMenu li div div{
  -webkit-transform: rotate(0deg);
  transform: rotate(0deg);
  -webkit-transition: all 200ms ease-in-out;
  transition: all 200ms ease-in-out;
}

.arrow-rghtMenu{
  -webkit-transform: rotate(0deg);
  transform: rotate(0deg);
  -webkit-transition: all 200ms ease-in-out;
  transition: all 200ms ease-in-out;
}



.mainPage-content-right-RghtMenu li div div

.mainPage-content-right-RghtMenu li:first-child{
    padding-top: 0;
}
.mainPage-content-right-RghtMenu li a{
    color: #03A9F4;
    display:block;
    width: auto;
    font-size: 20px;
    font-weight: 500;
}
.mainPage-content-right-RghtMenu-Second{
    display:none;
    margin-top: 30px;
}
.mainPage-content-right-RghtMenu-Second li a{
    color: #2196F3;
    font-size:15px;
}

.arrow-rghtMenu img{
    width:15px;
    height:10px;
    margin:13px 5px 5px 0;
}


.mainPage-content-right-Banner{
    padding: 0 0 0 20px;
    margin: 20px 0 20px 0;
}
.mainPage-content-right-Banner-img{
    height: 400px;
    width:200px;
}

.loadMore__href__container
  display: flex;
  margin-bottom: 20px;
  justify-content: center;
  margin-top: 30px;

.loadMore__href__container__link
  display: none;
  margin-bottom: 20px;
  justify-content: center;
  margin-top: 30px;

.loadMore__href{
  background: #febf14;
  align-items: center;
  text-align: center;
  text-decoration: none;
  color: #000;
  padding: 15px 30px;
  transition: 200ms ease all;
}
.loadMore__href:hover, .loadMore__href:focus {
    text-decoration: none;
    color: #FEFEFE;
    box-shadow: 0 0 7px rgba(0,0,0,0.2);
}
.loadMore__href:hover .loadMore__href h2{
    color: white !important;
}
.loadMore__href h2:hover{
    color:white !important;
}
.loadMore__href h2,.loadMore__href i{
    font-size:15px;
    margin: 0;
}
.loadMore__href h2{
    font-weight: 600;
    padding: 0 0 0 15px;
}

.loadMore__href i{
    padding:4px 0 0 10px;
}
