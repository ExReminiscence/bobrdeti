}
.mainPage-content-left::-webkit-scrollbar {width:0px;}
.mainPage-content-news{
    min-height: 300px;
    height: auto;
}
.bigNews{
    background-size: 100% 100%;
    height: 530px;
    padding: 5px 0 0 15px;
    margin: 0 0 5px 0;

}
.bigNewsBlock{
    position:absolute;
    bottom:0;
}
.bigNewsBlockName{
    padding: 0 15px 0 15px;
}
.bigNewsBlockName a{
    font-size:25px;
    font-weight: 600;
    color: #F8F4F3;


}
.bigNewsBlockDesc{
    font-size: 12px;
    color: #F8F4F3;
    padding: 0 15px 0 15px;

}
.fireNews{
    position: absolute;
    top:10px;
    right:10px;
}
.smallNewsBlockName{
    height: 20%;
    padding-top:55%;
    padding-right:15px;
    margin: 0;
    padding-left: 15px;
    padding-right: 15px;
    line-height: 0.8;
}
.smallNewsBlockName a{
    font-size:16px;
    font-weight: 600;
    color: #F8F4F3;
}
.smallNews{
    background-size: 100% 100%;
    height: 260px;
    padding: 5px 0 5px 0;
    margin: 10px 0 5px 10px;
}
.smallNews:first-child{
    margin-top: 0px;
}
.smallNews:last-child{
    padding-top:0;

    margin-bottom: 0px;
}
.newsName,.articleName{
    font-size: 30px;
    font-weight: 600;
    border-bottom: 2px solid #03a9f494;
    color: #03A9F4;
    padding: 10px 0 10px 0;
    margin: 20px 0 20px 0;
}

/*-------------------news-----------------------------*/

/*-------------------article-----------------------------*/
.articleContainer{
    flex-wrap: wrap;
    justify-content: space-between;
}
.article{
    margin:10px 0 10px 8px;
    background: #FFFFFF;
    width:32%;
    margin-left: 0;
}
.article p{
    margin:0;
    padding: 0 10px 15px 10px;
    font-size: 10px;
}
.article-imgDiv{
    padding:10px;
}
.article-imgDiv img{
    width:100%;
    height: 200px;
}
.articleBlockName{
    margin:0;
}
.articleBlockName a{
    display:block;
    width:100%;
    color: #000000;
    font-size: 20px;
    font-weight: bold;
    padding: 0px 10px 15px 10px;
    margin:0;
}
.articleBlockName a:focus
  text-decoration none

.articleBlockDesc{
    margin:0;
    padding: 0 10px 15px 10px;
    font-size: 10px;
}
