@media only screen and (min-width: 320px) and (max-width: 768px) {

    #menu-button{
        display:block;
        z-index: 101;
    }
    .header-menu-articleMenu{
        z-index: 101;

        position: absolute;
        bottom:0;
        height: auto;
    }
    .header-logo a{
        width:70%;
    }
    .header-logo-img{


    }
    .menuMainDiv{
        width:100% !important;
        max-width: 100% !important;
    }

    .header-rightBlock{
      padding: 0px 0 55px 0;
      display: none;
      width: 100vw !important;
      height: 100% !important;
      position: fixed !important;
      z-index: 100;
      background: #fffffff2;
      top: 80px;
    }
    .header-menu{
      flex-direction: column;
      padding:0;
      height: 80%;
      justify-content: space-evenly;
    }
    .header-menu li{
        display: block;
        padding: 0;
    }
    .header-menu li:first-child{
        margin-top: 20px;
    }
    .header-menu li a{
        display:block;
        width:100%;
        text-align:center;
        font-size: 20px;
        color: #03a9f4;
    }
    .header-menu-articleMenu{
        display:none;
        background: #FFFFFF;
        height: 300px;
        width: 80%;
        left: 10%;
        border-radius: 5px;
        position: absolute;
        border: 2px solid black;
        top: 100px;
    }
    .header-menu-articleMenu__left,.header-menu-articleMenu__right,.header-menu-articleMenu__center{
        padding:10px;
        width:100%;
        border: none;
        text-align:center;
    }
    .header-menu-articleMenu__arrow{
        display: none;
    }
    .header-menu-articleMenu__content{
        flex-direction: column;
        width:100%;
        height: auto;
        align-items: center;
        padding: 30px 0 30px 0;
    }
    .articleHref{
        margin-left: 40% !important;
        width:20% !important;
    }
    .vipad-img{
        padding: 5px 0 0 0;
        margin: -2px 0px 0 2px;
    }
    .header-menu-articleMenu li{
        padding: 5px 0 5pxs 0;
    }
    .header-menu-articleMenu li a{
        color: #1C1C1C;
        font-size:15px;
    }

    .menuSearch{
        height: 40px;
        background: #FFFFFF;
        padding: 0;
        border-radius: none;
        outline: none;
        padding:5px;
        position: absolute;
        top: 100px;
        display:none;
        z-index: 102;
        width: 80%;
        left:10%;
    }



 }




 @media only screen and (min-width: 769px) and (max-width: 1024px) {

    .header-logo{

    }
    .header-logo-img{
        padding:25px 0 25px 0px;
    }
    .menuMainDiv{
        width:100% !important;
    }
    .header-menu-articleMenu{
        left: 20%;
    }
    .header-rightBlock{
        padding: 25px 0 25px 0;
        width:80%;
        margin-left:20%;
    }
    .header-menu{
        margin:0 ;
        padding: 0;
    }

    .header-menu li{
        padding: 0 15px 0 0;
    }
    .header-menu li:last-child{
        padding-right: 0;
    }
    .header-menu li a{
        font-size: 10px;
        color: #0C8D87;
    }

}


@media only screen and (min-width: 1025px) and (max-width: 1199px) {

    .header-logo{

    }
    .header-logo-img{
        width: 80%;
        padding: 25px 0 25px 0;
    }
    .menuMainDiv{
        width:100% !important;
    }
    .header-menu-articleMenu{
        left: 35%;
    }
    .header-rightBlock{
        padding: 0;
    }
    .header-menu{
        margin:0;
        padding: 20px 0 20px 0;
    }
    .header-menu li{
        padding: 5px 20px 5px 0;
    }
    .header-menu li:last-child{
        padding-right: 0;
    }
    .header-menu li a{
        font-size: 12px;
        color: #0C8D87;
    }


}
