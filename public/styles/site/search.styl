.search{
    margin: 110px 0 100px 0;
}
.search__name{
    font-size:25px;
    font-weight: 600;
    color:#03A9F4;
    margin-bottom: 20px;
    padding: 0;
}

.search__block__item{
    height: auto;
    background: #FEFEFE;
    margin: 0 0 20px 0;
}

.search__block__item__img{
    padding: 5px;
    height: 250px;
    width: 30%;
}
.search__block__item__img img{
    width: 100%;
    height: 100%;
}
.search__block__item__desc{
    width: 70%;
}
.search__block__item__desc__name a,.search__block__item__desc__name{
    font-size:20px;
    font-weight: 600;
    color: black;
}
.search__block__item__desc__name,.search__block__item__desc__content{
    padding: 10px;
}

@media screen and (max-width: 1199px){
    .search__block__item{
        flex-direction: column;
    }
    .search__block__item{
        height: auto;
        background: #FEFEFE;
        margin: 0 0 20px 0;
    }
    .search__block__item__img{
        padding: 5px;
        width: 100%;
    }
    .search__block__item__desc{
        width: 100%;
    }
    .search__block__item__desc__name{
        padding: 10px;
        margin: 0;
    }
    .search__block__item__desc__content{
        padding: 0 10px 10px 10px;
    }










}
