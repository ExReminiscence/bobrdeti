.newsPage{
    margin: 110px 0 110px 0;
    height: auto;
}
/*--------------POPULAR--------------*/
.newsPage__popular{
    background: #FFFFFF;
    height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
 /*   position: absolute;
    width:10%;
    height: 80%;
    left:20%;
    overflow-x: hidden;
    overflow-y: scroll;
*/
}

.newsPage__events__item__img__link {
  width:197px;
  height:166px;
}

.activeNews {
  color: #FEBF14;
}

.popular__news__title
  font-size: 12px;
  font-weight: 600;
  text-align: center;
  line-height: 16px;


.newsPage__popular::-webkit-scrollbar {width:0px;}

.newsPage__popular__name{
    font-size:20px;
    font-weight: 600;
    padding: 8px 0 40px 0;
    color #03a9f4f2
}

.newsPage__popular__item{
  border-bottom: 2px solid #b6b6b6;
  margin: 0 0 16px 0;
  padding: 0px 0 10px;
}

.newsPage__popular__item a{
    margin-bottom:20px;
    color:#FEBF14;
    font-size:12px;
}
.newsPage__popular__item:last-child{
    border-bottom: none;
}
.newsPage__popular__item__desc{
    font-size: 12px;
    font-weight: 500;
    width:auto;
}

.newsPage__popular__item__a{
  color: #5A5A5A;
  font-size: 12px;
  font-weight: 500;
  width:auto;
  margin-bottom: -40px;
}

.newsPage__popular__item__a:hover{
  color: #FEBF14;
  text-decoration: none;
}


/*--------------POPULAR--------------*/




/*--------------EVENTS--------------*/

.newsPage__events{
 /*   position: absolute;
    height: 900px;
    width: 36%;
    left: 30%;
    overflow-x: hidden;
    overflow-y: scroll;

 */
}

.newsPage__events::-webkit-scrollbar {width:0px;}

.newsPage__events__name {
    font-size:25px;
    font-weight: 600;
    color:#03A9F4;
    margin-bottom: 20px;
}

.newsPage__events__todayNews{
    display:block;
    width:auto;
    font-size: 25px;
    color: #3fb1e4;
    text-align: center;
    padding: 10px;
    background: #FFFFFF;
    margin: 0 0 20px 0;
    font-weight: 600;
}


.newsPage__events__item{
    height: 180px;
    width:100%;
    background: #FFFFFF;
    margin: 0 0 20px 0;
}

.newsPage__events__item__img{
    padding:7px;
    width: 180px;
    height: 180px;
}
.newsPage__events__item__img img{
    width: 100%;
    height: 100%;
}
.newsPage__events__item__content__name{
    margin:0;
    height: 30px;
}
.newsPage__events__item__content__name a{
    font-size:20px;
    font-weight: 600;
    color: #000000;
    margin:0;
}
.newsPage__events__item__content__desc{
    height: 120px;
    padding: 40px 0 40px 0 ;
    font-size: 12px;
    font-weight: 600;
    color: #7C7C7C;
}
.newsPage__events__item__content__desc p{
    font-size: 12px;
    font-weight: 600;
    color: #7C7C7C;
    padding: 0;
    margin-top:25px;
}
.newsPage__events__item__content__date {
    font-size: 12px;
    color: #7C7C7C;
    height: 30px;
}
/*--------------EVENTS--------------*/




/*--------------RUBRICKS--------------*/

.newsPage__rubrics{
  display: flex;
  flex-direction: column;
}
.newsPage__rubricsBlock{
    background: #FFFFFF;
    height: auto;
    margin-bottom: 30px;
}

.newsPage__rubricsBlock__name{
    font-size: 20px;
    font-weight: 600;
    text-align:center;
    border-bottom: 2px solid rgba(3, 169, 244, 0.46);
    padding: 10px 0 10px 0;
    margin-left:5%;
    width:90%;
    color: #03a9f4f2;
}

.newsPage__rubricsBlock__spis{
    list-style: none;
    padding: 0 0 0 5%;
}
.newsPage__rubricsBlock__spis li{
    padding: 24px 0 0 10px;
}
.newsPage__rubricsBlock__spis li a{
    color:#64caf9;
    padding: 5px;
}
.newsPage__rubricsBlock__spis li a:hover{
    color:#FEBF14;
}
.newsPage__rubricsBlock__spis li:last-child{
    padding-bottom: 24px;
}
