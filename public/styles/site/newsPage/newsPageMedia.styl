@media screen and (max-width: 768px){
    .newsPage__events__item__body{
        flex-direction: column;
    }
    .newsPage__events__item{
        height: auto;
        width:100%;
        background: #FFFFFF;
        margin: 0 0 20px 0;
    }
    .newsPage__events__item__img{
        padding:7px;
        width: 100%;
        height: auto;
    }
    .newsPage__events__item__content__name{
        height: auto;
    }
    .newsPage__events__item__content__desc{
        margin: 0px 0 0px 0;
        height: auto;
    }

    .newsPage__events__item__img__link {
        width: 100%;
        height: 320px;
    }

    .newsPage__events__item__content__date{
        margin: 20px 0 20px 0;
        font-weight: 600;
        text-align: right;
    }
    .newsPage__events__name{
        margin: 20px 0 20px 0;
    }

    .newsPage__events__todayNews{
      margin-top 20px
    }

}
@media screen and (min-width: 767px) and (max-width: 991px){
    .newsPage__events__item{
        height: 210px;
        background: #FFFFFF;
        margin: 0 0 20px 0;
    }
    .newsPage__events__item__img{
        height: 210px;
    }
    .newsPage__events__item__content__name{
        height: auto;
    }
    .newsPage__events__item__content__desc{
        margin: 0;
        padding: 20px 0 20px 0;
        height: auto;
    }

    .newsPage__events__item__content__date{
        margin: 0px 0 0 0;
    }
    .newsPage__events__name{
        margin: 20px 0 20px 0;
    }

}


@media screen and (min-width: 992px) and (max-width: 1199px){


    .newsPage__rubrics{
        margin: 0;
    }
    .newsPage__events__item__img{
    }
    .newsPage__events__item__content__name{
        height: auto;
    }
    .newsPage__events__item__content__desc{
        margin: 0;
        padding: 20px 0 10px 0;
        height: auto;
    }

    .newsPage__events__item__content__date{
        margin: 0px 0 0 0;
    }
    .newsPage__events__name{
        margin: 20px 0 20px 0;
    }

}

