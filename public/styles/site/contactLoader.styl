.contactloaderArea {
    /*background: -webkit-linear-gradient(left, rgba(237,237,237,1) 0%, rgba(85,185,154,1) 40%, rgba(85,185,154,1) 60%, rgba(237,237,237,1) 100%);*/
    background: white;
    overflow: hidden;
    position: fixed;
    left: 0;
    top: 0;
    right:0;
    bottom:0;
    z-index: 100000;
  }
  .contactloaderArea img
  {
    position: absolute;
  
  }
  
  #contactloadertext
  {
    position: absolute;
    width:100%;
    height: 100px;
    top:35%;
  }
  
  #contactloadertext h1
  {
  color:rgba(255,255,255,1);
  filter: drop-shadow(12px 12px 15px white);
  animation: logoloadertext linear 1s;
  }
  
  #inner_1
  {
      border: 5px solid rgba(16, 109, 253, 1);
  }
  #inner_2
  {
      border: 3px solid rgba(253, 58, 36, 1);
  }
  #inner_3
  {
      border: 2px solid rgba(254, 191, 20, 1);
  }
  
  .demo {
    width: 100px;
    height: 102px;
    border-radius: 100%;
    position: absolute;
    top: 48%;
    left: calc(50% - 50px);
  }
  
  .circle {
    width: 100%;
    height: 100%;
    position: absolute;
  }
  .circle .inner {
    width: 100%;
    height: 100%;
    border-radius: 100%;
    border: 5px solid rgba(16, 109, 253, 1);
    border-right: none;
    border-top: none;
    background-clip: padding;
    box-shadow: inset 0px 0px 1px rgba(253, 53, 32, 1);
  }
  
  @-webkit-keyframes spin {
    from {
      -webkit-transform: rotate(0deg);
              transform: rotate(0deg);
    }
    to {
      -webkit-transform: rotate(360deg);
              transform: rotate(360deg);
    }
  }
  
  @keyframes spin {
    from {
      -webkit-transform: rotate(0deg);
              transform: rotate(0deg);
    }
    to {
      -webkit-transform: rotate(360deg);
              transform: rotate(360deg);
    }
  }
  .circle:nth-of-type(0) {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
  }
  .circle:nth-of-type(0) .inner {
    -webkit-animation: spin 2s infinite linear;
            animation: spin 2s infinite linear;
  }
  
  .circle:nth-of-type(1) {
    -webkit-transform: rotate(70deg);
            transform: rotate(70deg);
  }
  .circle:nth-of-type(1) .inner {
    -webkit-animation: spin 2s infinite linear;
            animation: spin 2s infinite linear;
  }
  
  .circle:nth-of-type(2) {
    -webkit-transform: rotate(140deg);
            transform: rotate(140deg);
  }
  .circle:nth-of-type(2) .inner {
    -webkit-animation: spin 2s infinite linear;
            animation: spin 2s infinite linear;
  }
  
  .demo {
    -webkit-animation: spin 5s infinite linear;
            animation: spin 5s infinite linear;
  }
  
  

  