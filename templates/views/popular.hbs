<section class="articlePage">
        <div class="container">
            <div class="row">
                <div class="col-lg-9  newsPage__events">
                    <h2 class="newsPage__events__name">Статьи</h2>
                    <div class="articlePage__left__menuDiv">
                        <ul class="articlePage__left__menuDiv__menu d-flex">
                            <li class="articlePage__left__menuDiv__menu__item ">
                                <a href="#" class="d-flex choiceArticle ARTICLE__HREF">
                                    <h2 class="ARTICLE__HREF__h2">Выбрать статью</h2>
                                    <img src="/img/vipad.png"  alt="">
                                </a>
                            </li>
                            <ul class="articlePage-ChoiceMenu">
                              <li style="padding-bottom: 10px;">
                                  <div class="d-flex">
                                      <a href="/article" class="open-ChoiceMenu-SecondMenu">Все категории</a>
                                  </div>
                              </li>
                                {{#each data.categories}}
                                <li style="padding-bottom: 10px;">
                                    <div class="d-flex">
                                        <a href="{{categoryUrlarticle key}}" class="open-ChoiceMenu-SecondMenu">{{name}}</a><a href="#">{{#if subcategories}}<img style="margin-left:10px;" class="arrow-rghtMenu" src="https://img.icons8.com/metro/15/000000/expand-arrow.png"></a>{{/if}}
                                    </div>
                                    <ul class="mainPage-content-right-RghtMenu-Second" style="display:none;">
                                        {{#each subcategories}}
                                        <li style="margin-top:10px;"><a style="color:#757575;" href="{{subcategoryUrl ../key key}}">{{{name}}}</a></li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/each}}
                            </ul>
                            <li class="articlePage__left__menuDiv__menu__item"><a href="/new" class="ARTICLE__HREF">Новые статьи</a></li>
                            <li class="articlePage__left__menuDiv__menu__item"><a href="/popular" class="ARTICLE__HREF">Популярные запросы</a></li>
                        </ul>
                    </div>
                    <div class="articlePage__left__content d-flex">
                        {{#each data.posts.results}}
                        {{#if articl}}
                        <div class="articlePage__left__content__item">
                            <div class="articlePage__left__content__item__img ">
                                {{#if image}}
                                <a href="{{postUrl slug}}"><img src="{{{prevImageMin.secure_url}}}"></a>
                                {{/if}}
                            </div>

                            <h2 class="articlePage__left__content__item__name"><a href="{{postUrl slug}}">{{{title}}}</a></h2>
                            <div class="articlePage__left__content__item__desc">
                              {{#if kratkoe}}
                                {{kratkoe}}
                              {{else}}
                                {{{content}}}
                              {{/if}}
                            </div>
                        </div>
                        {{/if}}
                        {{/each}}

                    </div>
                    <div class="col-lg-4 offset-lg-4 articlePagination" style="display:none;">
                        {{>pagination}}
                    </div>

