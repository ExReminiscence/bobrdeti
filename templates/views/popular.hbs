    <script type="text/javascript">
    var arrow_rghtMenu = document.querySelectorAll('.arrow-rghtMenu2');
    var RghtMenu_Second = document.querySelectorAll('.mainPage-content-right-RghtMenu-Second2');
    var articlePagination = document.querySelector('.articlePagination');


    for (let i = 0; i < arrow_rghtMenu.length; i++) {

      arrow_rghtMenu[i].onclick = () => {

        if (RghtMenu_Second[i].style.display == 'block') {
          RghtMenu_Second[i].style.display = 'none';
          arrow_rghtMenu[i].style.transform = 'rotate(0deg)';
        }else{
          arrow_rghtMenu[i].style.transform = 'rotate(90deg)';
          RghtMenu_Second[i].style.display = 'block';
        }
      }
    }

    if (document.location.pathname == '/article') {
      articlePagination.style.display = "block";
    };

    </script>
