      <h2 class="articleName">Афиша мероприятий в Бобруйске на сегодня</h2>
      <div class="articleName__sub__container">
        <p class="articleName__sub">Всего мероприятий на сегодня - {{data.afishaIndex.length}}</p>
        <div class="articleName__line__icon">
          <span class="glyphicon glyphicon-chevron-left prev__index__afish" aria-hidden="true"></span>
          <span class="glyphicon glyphicon-chevron-right next__index__afish" aria-hidden="true"></span>
        </div>
      </div>


      <div class="afishaIndex__container">
        {{#each data.afishaIndex}}
        <div class="afishaIndex__item" onclick="location.href = '{{postUrl slug}}'">
          <div class="afishaIndex__item__sectionAfisha" style="background: {{sectionAfisha.color}};">
            <p class="afishaIndex__item__sectionAfisha__title">{{sectionAfisha.name}}</p>
          </div>
          <div class="afishaIndex__item__foto">
            <img class="afishaIndex__item__foto__img" src="{{#if image.secure_url}}{{{image.secure_url}}}{{else}}/img/fonafisha.webp{{/if}}" alt="">
            <div class="afishaIndex__item__foto__shadow" style="box-shadow: inset -1px -108px 30px -20px {{sectionAfisha.color}};">
              <h2 class="afishaIndex__item__title">{{title}}</h2>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
