        <div class="col-lg-12 articleIndex">
          <h2 class="articleName">Статьи</h2>
          <div class="col-lg-9 articleName__row">
            <div class="mainPage-content-articles">

                <div class="d-flex articleContainer">
                    {{#each data.posts}}
                    {{#if articl}}
                    <div class="article" itemscope itemtype="https://schema.org/Article">
                        <div class="articlePage__left__content__item__img ">
                            {{#if image}}
                            <a class="articlePage__left__content__item__img__a" style="height: 167px;" href="{{postUrl slug}}"><img itemprop="image" class="articlePage__left__content__item__img__a__img" src="{{image.secure_url}}"></a>
                            {{/if}}
                            <div itemprop="publisher" itemscope itemtype="http://schema.org/Organization">
                              <meta itemprop="url" content="https://bobrdeti.by">
                              <meta itemprop="name" content="Bobrdeti.by">
                              <div itemprop="logo" itemscope itemtype="https://schema.org/ImageObject" style="width:0;">
                                  <img  itemprop="contentUrl" src="https://bobrdeti.by/img/logo.png" style="width:100%;" alt="Logo Svsites">
                                  <meta itemprop="width" content="267">
                                  <meta itemprop="height" content="44">
                                  <meta itemprop="name" content="Bobrdeti.by">
                                  <meta itemprop="url" content="https://bobrdeti.by/img/logo.png">
                              </div>
                            </div>
                        </div>
                        <meta {{#if postAutor}}itemprop="author" content="{{postAutor}}"{{else}}itemprop="author" content="Bobr Deti"{{/if}}>
                        <h2 itemprop="headline" class="articleBlockName"><a itemprop="mainEntityOfPage" itemprop="url" href="{{postUrl slug}}">{{title}}</a></h2>
                        <div class="articlePage__left__content__item__desc" style="padding: 0 10px 15px 10px;" itemprop="description">
                          {{#if kratkoe}}
                            {{kratkoe}}
                          {{else}}
                            {{{content}}}
                          {{/if}}
                        </div>
                        <meta itemprop="datePublished" content="{{moment publishedDate}}">
                        <meta itemprop="dateModified" content="{{moment publishedDate}}">
                        {{#each categories}}
                        <div class="article__postCategories">
                            <a href="/article/{{key}}">{{name}}</a>
                        </div>
                        {{/each}}
                    </div>
                    {{/if}}
                    {{/each}}
                </div>

                <div class="loadMore__href__container">
                  <a href="" class="loadMore__href" style="display:flex;">
