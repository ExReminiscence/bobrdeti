<section class="search">
    <div class="container">
        <div class="col-lg-9" style="padding: 0;">
          {{#if data.posts}}
        <h2 class="search__name">Найдено : {{data.posts.length}}</h2>
        {{/if}}
        <div class="search__block">
            {{#if data.posts}}
            {{#each data.posts}}
            <div class="search__block__item d-flex">
                {{#if image.secure_url}}
                  <div class="search__block__item__img" style="background: url('{{{image.secure_url}}}') center center no-repeat;background-size: cover;" ></div>
                {{else}}
                  <div class="search__block__item__img" style="background: url('/img/searchimg.webp') center center no-repeat;background-size: cover;" ></div>
                {{/if}}
                <div class="search__block__item__desc" >
                    <h2 class="search__block__item__desc__name"><a href="{{postUrl slug}}">{{title}}</a></h2>
                    <div class="search__block__item__desc__content">{{{kratkoe}}}</div>
                </div>
            </div>
            {{/each}}
            {{else}}<h2 class="search__block__item__name">По данному запросу ничего не найдено</h2>
            {{/if}}

