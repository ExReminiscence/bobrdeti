<section class="usefullPage">
    <div class="container">
        <div class="col-lg-12 usefullPageNameDiv">
            <h1 class="usefullPageName">Полезные адреса</h1>
        </div>
        <div class="row col-lg-12" style="padding-left:0;">
            <div class="col-lg-9 d-flex usefullLeft" >


                <div class="usefullPageBlockItem">
                    {{#each data.categories}}
                    <div class="usefullPageBlockItem__item">
                        {{#if image}}
                        <div class="usefullPageBlockItem__item__img"><img src="{{{image.secure_url}}}" alt=""></div>
                        {{/if}}
                        {{#if name}}
                        <div class="usefullPageBlockItem__item__name"><h2><a href="{{usefullUrl key}}">{{{name}}}</a></h2></div>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>

            <div class="col-lg-3 usefullRight">
              <div class="reklamaBlock">
                <!-- Yandex.RTB R-A-484761-1 -->
                <div id="yandex_rtb_R-A-484761-1"></div>
                <!-- Yandex.RTB R-A-484761-2 -->
                <div id="yandex_rtb_R-A-484761-2"></div>
                <script type="text/javascript">
                    (function(w, d, n, s, t) {
                        w[n] = w[n] || [];
                        w[n].push(function() {
                            Ya.Context.AdvManager.render({
                                blockId: "R-A-484761-2",
                                renderTo: "yandex_rtb_R-A-484761-2",
                                async: true
                            });
                        });
                        t = d.getElementsByTagName("script")[0];
                        s = d.createElement("script");
                        s.type = "text/javascript";
                        s.src = "//an.yandex.ru/system/context.js";
                        s.async = true;
                        t.parentNode.insertBefore(s, t);
                    })(this, this.document, "yandexContextAsyncCallbacks");
                </script>
                <div class="" style="margin-top:10px;">
                  {{#each reklama}}
                  <a target="_blank" href="{{{content}}}">
                      <img src="{{{image.secure_url}}}" class="reklamaBlock-img" alt="reklamaBlock">
                  </a>
                  {{/each}}
                </div>
              </div>
            </div>
        </div>
    </div>
</section>
